generator client {
  provider = "prisma-client"
  output = "./generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Jeu {
  id           Int          @id @default(autoincrement())
  titre        String
  description  String?
  dateSortie   DateTime
  genreId      Int
  editeurId    Int
  misEnAvant   Boolean      @default(false)
  genre        GenreDeJeu   @relation(fields: [genreId], references: [id])
  editeur      EditeurDeJeu @relation(fields: [editeurId], references: [id])
}

model GenreDeJeu {
  id          Int    @id @default(autoincrement())
  nom         String @unique
  jeux        Jeu[]
}

model EditeurDeJeu {
  id          Int    @id @default(autoincrement())
  nom         String @unique
  jeux        Jeu[]
}