generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Jeu {
  id           Int          @id @default(autoincrement())
  titre        String
  description  String?
  dateSortie   DateTime     // Utiliser format: 2024-12-09T00:00:00Z
  genreId      Int
  editeurId    Int
  misEnAvant   Boolean      @default(false)
  genre        GenreDeJeu   @relation(fields: [genreId], references: [id])
  editeur      EditeurDeJeu @relation(fields: [editeurId], references: [id])
}

model GenreDeJeu {
  id          Int    @id @default(autoincrement())
  nom         String @unique
  jeux        Jeu[]
}

model EditeurDeJeu {
  id          Int    @id @default(autoincrement())
  nom         String @unique
  jeux        Jeu[]
}