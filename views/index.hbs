<h1>Jeux mis en avant</h1>

{{#if featured.length}}
  <ul>
    {{#each featured}}
      <li>
        <a href="/games/{{id}}">{{title}}</a>
      — <a href="/genres/{{genre.id}}">{{genre.name}}</a>
       — <a href="/publishers/{{publisher.id}}">{{publisher.name}}</a>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>Aucun jeu mis en avant pour le moment.</p>
{{/if}}
