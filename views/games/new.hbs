<h1>Ajouter un jeu</h1>
<form action="/games" method="POST">
  <label>Titre: <input name="title" required /></label><br/>
  <label>Description: <textarea name="description"></textarea></label><br/>
  <label>Date de sortie: <input type="date" name="releaseDate" required /></label><br/>
  <label>Genre:
    <select name="genreId" required>
      {{#each genres}}
        <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
  </label><br/>
  <label>Éditeur:
    <select name="publisherId" required>
      {{#each publishers}}
        <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
  </label><br/>
  <label>Mis en avant: <input type="checkbox" name="featured" /></label><br/>
  <button type="submit">Créer</button>
</form>
